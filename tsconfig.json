{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "declaration": false,
    "noEmit": true,
    "rootDir": "./src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "strict": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
